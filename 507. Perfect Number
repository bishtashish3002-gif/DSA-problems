class Solution {
    public boolean checkPerfectNumber(int num) {
        int result=0;
        for(int i =num-1; i>=1; i--){
            if(num%i==0){
                result+=i;
            }
        }
        if (result==num){
            return true;
        }
        return false;
    }
}
